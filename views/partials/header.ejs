<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script>
        var isShow = false;
        function showAddNewMenu() {
            var newToy = document.getElementById('new-toy');
            if (isShow) {
                isShow = false;
                newToy.style.display = 'none';
            } else {
                isShow = true;
                newToy.style.display = 'block';
            }
        }
    </script>
</head>

<body>
    <div class="container d-flex justify-content-center">
        <div class="card mt-5 p-4">

            <div class="header-img">
                <div class="toy-icon">
                    <div class="dropdown">
                        <a href="#" class="dropbtn"><img src="/images/icons8-menu-64.png"></a>
                        <div class="dropdown-content">
                            <ul>
                                <% if (!loggedIn) { %>
                                    <li><a href="/login">Login</a></li>
                                    <% } else { %>
                                        <li><a href="#" onclick="showAddNewMenu();return false;">Add new toy</a></li>
                                        <li><a href="/logout">Logout</a></li>
                                        <% } %>
                                            <ul>
                        </div>
                    </div>
                </div>
                <div class="app-icon"><a href="/"><img src="/images/icons8-restaurant-menu-64.png"></a></div>
            </div>

            <% if (loggedIn) { %>
                <div class="login-box">
                    <div id="new-toy">
                        <h2 class="page-title">New Menu</h2>
                        <form action="/toy/new" method="POST">
                            <div class="toy-name"><input type="text" name="toyName" placeholder="Name"></div>
                            <div class="toy-icon-link"><input type="text" name="toyIcon" placeholder="Icon URL [http]">
                            </div>
                            <!-- cũng không cần cái này -->
                            <!-- <div class="toy-url"><input type="text" name="toyUrl" placeholder="Menu URL [http]"></div> -->
                            <div class="toy-btn"><button type="submit" class="btn btn-primary">Save</button></div>
                        </form>
                    </div>
                </div>
                <% } %>